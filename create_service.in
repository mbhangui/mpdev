check_update_if_diff()
{
	val=`cat $1 2>/dev/null`
	if [ ! " $val" = " $2" ] ; then
		echo $2 > $1
	fi
}

add_service()
{
	if [ $# -ne 1 ] ; then
		echo "USAGE: create_service --servicedir=path --user=username --add-service" 1>&2
		return 1
	fi
	userid=$1
	user=$(getent passwd $userid 2>/dev/null| cut -d: -f1)
	if [ $? -ne 0 ] ; then
		if [ $? -eq 2 ] ; then
			echo "No such userid $userid" 1>&2
			return 1
		fi
		return 1
	fi
	if [ -z "$servicedir" ] ; then
		echo "--servicedir not specified" 1>&2
		exit 1
	fi
	if [ ! -d $logdir ] ; then
		mkdir -p $logdir
		chown qmaill:nofiles $logdir
	fi
	mkdir -p $servicedir/$service_name/log
	mkdir -p $servicedir/$service_name/variables
	echo "$prog_args" > $servicedir/$service_name/variables/.options
	check_update_if_diff $servicedir/$service_name/variables/AUTO_RATING 0
	check_update_if_diff $servicedir/$service_name/variables/MPD_HOST    127.0.0.1
	check_update_if_diff $servicedir/$service_name/variables/MPD_PORT    6600
	sock=$(grep "^bind_to_address" /etc/mpd.conf | grep sock|awk '{print $2}'|sed 's{"{{g')
	if [ -n "$sock" ] ; then
		check_update_if_diff $servicedir/$service_name/variables/MPD_SOCKET $sock
	elif [ -S /run/mpd/mpd.sock ] ; then
		check_update_if_diff $servicedir/$service_name/variables/MPD_SOCKET "/run/mpd/mpd.sock"
	fi
	home=$(getent passwd $userid|cut -d: -f6)
	if [ -n "$home" ] ; then
		check_update_if_diff $servicedir/$service_name/variables/HOME "$home"
		check_update_if_diff $servicedir/$service_name/variables/XDG_RUNTIME_DIR "$home"
		check_update_if_diff $servicedir/$service_name/variables/PATH "/bin:/usr/bin:$home/.mpdev"
	fi
	mkdir -p $home/.mpdev
	cp /usr/libexec/$service_name/player \
		/usr/libexec/$service_name/playpause $home/.mpdev
	
	(
		echo "#!/bin/sh"
		echo "# generated log script for $host on `date`"
		echo "# by the below command"
		echo "# $prog_args"
		echo "exec /usr/bin/setuidgid qmaill \\"
		if [ -f /usr/sbin/multilog ] ; then
			echo "/usr/sbin/multilog t $logdir/$service_name"
		else
			echo "/usr/bin/multilog t $logdir/$service_name"
		fi
	) > /service/$service_name/log/run
	chmod +x /service/$service_name/log/run
	(
		echo "#!/bin/sh"
		echo "# generated run script for $host on `date`"
		echo "# by the below command"
		echo "# $prog_args"
		echo "exec 2>&1"
		echo
		echo "home=\$(getent passwd $userid|cut -d: -f6)"
		echo "user=\$(getent passwd $userid|cut -d: -f1)"
		echo
		echo "if [ -f /tmp/mpdev/.cleanup ] ; then"
		echo "  find /tmp/mpdev -type f -exec /bin/rm -f {} \;"
		echo "  touch /tmp/mpdev/.cleanup"
		echo "fi"
		echo "find \$home/.config/lastfm-scrobbler  -name '*'.log -ctime +7 -exec /bin/rm -f {} \;"
		echo "find \$home/.config/librefm-scrobbler -name '*'.log -ctime +7 -exec /bin/rm -f {} \;"
		echo "for i in player playpause"
		echo "do"
		echo "  diff /usr/libexec/mpdev/\$i \$home/.mpdev/\$i > /dev/null 2>&1"
		echo "  if [ \$? -ne 0 ] ; then"
		echo "    cp /usr/libexec/mpdev/\$i \$home/.mpdev/\$i"
		echo "  fi"
		echo "done"
		echo "exec /usr/bin/setuidgid \$user /usr/bin/envdir \\"
		echo "  /service/$service_name/variables /usr/bin/mpdev -v"
	) > /service/$service_name/run
	chmod +x /service/$service_name/run
}

del_service()
{
	if [ ! -d $servicedir/$service_name ] ; then
		return 0
	fi
	mv $servicedir/$service_name $servicedir/."$service_name"
	svc -dx $servicedir/."$service_name" $servicedir/."$service_name"/log > /dev/null
	sleep 5
	/bin/rm -rf $servicedir/."$service_name" $servicedir/."$service_name"/log > /dev/null
}

usage()
{
prog_args=""
if [ -f /usr/bin/less ] ; then
	MORE=/usr/bin/less
else
	MORE=/usr/bin/more
fi
echo "Press ENTER for options, Cntrl C to quit" 1>&2
read key
$MORE <<EOF
Usage: create_service [OPTIONS]
create_service --servicedir=dir --add-service
  or
create_service --servicedir=dir --del-service
EOF
exit $1
}

################################# Main ##################################
if test $# -eq 0; then
    usage 1
fi
service_name=mpdev
logdir=/var/log/svc
servicedir=/service
prog_args="$0 $*"
while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	;;
    *) optarg=
	;;
    esac

    case "$1" in
    --servicedir=*)
    servicedir=$optarg
    ;;
    --user=*)
    user=$optarg
    ;;

    --add-service)
	if [ -z "$user" ] ; then
		echo "UNIX user not specified" 1>&2
	else
		add_service "$user"
	fi
    ;;
    --del-service)
	del_service
    ;;
    *)
    echo "invalid option [$1]"
    read key
    usage 1
    ;;
    esac
    shift
done
